<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ 'Recipe Book' }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        :root {
            color-scheme: light;
            --bg: #f6f3ee;
            --bg-accent: #fdf9f4;
            --card-bg: #ffffff;
            --text: #2c2520;
            --muted: #7a726b;
            --accent: #ff825a;
            --accent-dark: #e95b35;
            --accent-soft: rgba(255,130,90,0.18);
            --shadow-soft: 0 20px 60px rgba(30,22,18,0.12);
            --border: rgba(16,12,10,0.08);
        }

        * { box-sizing: border-box; }
        body {
            font-family: "Inter", "DM Sans", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #faf7f1 0%, #f5efe6 45%, #fffefb 100%);
            color: var(--text);
            line-height: 1.65;
            position: relative;
        }
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background-image: radial-gradient(circle at 25% 20%, rgba(255,194,155,0.22), transparent 35%), radial-gradient(circle at 80% 0%, rgba(161,192,255,0.2), transparent 40%);
            pointer-events: none;
            z-index: 0;
        }

        main { position: relative; z-index: 1; padding: clamp(1.75rem, 4vw, 3.5rem); max-width: 1120px; margin: 0 auto; }
        h1, h2, h3 { line-height: 1.2; margin-top: 0; color: var(--text); letter-spacing: -0.02em; }
        p { margin: 0 0 1rem; color: var(--text); }
        a { color: inherit; }
        button, a, input, textarea, select { font-family: inherit; }

        header {
            position: sticky;
            top: 0;
            z-index: 30;
            background: rgba(255,255,255,0.86);
            border-bottom: 1px solid rgba(14,10,9,0.08);
            backdrop-filter: blur(16px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.06);
        }
        header > div { max-width: 1200px; margin: 0 auto; padding: 1rem clamp(1.5rem, 4vw, 3rem); display: flex; align-items: center; justify-content: space-between; gap: 1rem; }
        header nav { display: flex; align-items: center; gap: 0.65rem; flex-wrap: wrap; }
        header nav a { font-weight: 600; text-decoration: none; color: var(--text); padding: 0.45rem 0.95rem; border-radius: 999px; transition: color 0.2s, background 0.2s, box-shadow 0.2s; }
        header nav a:hover { background: rgba(0,0,0,0.05); }
        header nav a:is(:focus-visible) { outline: 2px solid var(--accent); outline-offset: 3px; }

        .account-links { display: flex; gap: 0.75rem; align-items: center; flex-wrap: wrap; }
        .account-links span { font-weight: 600; color: var(--muted); }
        .account-links form { margin: 0; }

        .btn,
        .btn-primary,
        .btn-secondary,
        .btn-ghost { display: inline-flex; align-items: center; justify-content: center; gap: 0.35rem; border-radius: 999px; padding: 0.6rem 1.35rem; font-weight: 600; border: none; cursor: pointer; text-decoration: none; transition: transform 0.2s, box-shadow 0.2s, background 0.2s, color 0.2s; }
        .btn:focus-visible,
        .btn-primary:focus-visible,
        .btn-secondary:focus-visible,
        .btn-ghost:focus-visible { outline: 2px solid var(--accent); outline-offset: 3px; }
        .btn-primary { background: linear-gradient(130deg, var(--accent), var(--accent-dark)); color: #fff; box-shadow: 0 18px 26px rgba(233,91,53,0.35); }
        .btn-primary:hover { transform: translateY(-1px); }
        .btn-secondary { background: rgba(0,0,0,0.05); color: var(--text); border: 1px solid transparent; }
        .btn-secondary:hover { border-color: rgba(0,0,0,0.1); }
        .btn-ghost { background: transparent; border: 1px solid rgba(0,0,0,0.1); color: var(--text); }

        .eyebrow { text-transform: uppercase; letter-spacing: 0.32em; font-size: 0.7rem; color: var(--muted); margin: 0 0 0.4rem; display: inline-flex; align-items: center; gap: 0.4rem; font-weight: 600; }
        .eyebrow::before { content: ''; width: 28px; height: 1px; background: currentColor; opacity: 0.4; border-radius: 999px; }

        form label span { display: block; font-weight: 600; margin-bottom: 0.35rem; color: var(--text); }
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="number"],
        input[type="url"],
        input[type="search"],
        select,
        textarea { width: 100%; border-radius: 16px; border: 1px solid rgba(0,0,0,0.12); padding: 0.7rem 0.95rem; font-size: 0.96rem; font-family: inherit; transition: border-color 0.15s, box-shadow 0.15s, background 0.15s; background: #fff; }
        input:focus,
        select:focus,
        textarea:focus { outline: none; border-color: var(--accent-dark); box-shadow: 0 0 0 3px rgba(234,90,47,0.16); }
        textarea { resize: vertical; min-height: 140px; }
        ::placeholder { color: rgba(0,0,0,0.35); }
        .form-grid { display: grid; gap: 1.15rem; }
        .form-grid.two { grid-template-columns: repeat(auto-fit, minmax(230px, 1fr)); }
        .form-grid.three { grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); }

        .page-section { margin-top: clamp(2rem, 4vw, 3.5rem); }

        .page-hero { position: relative; overflow: hidden; border-radius: 32px; padding: clamp(1.8rem, 4vw, 3.5rem); background: linear-gradient(120deg, rgba(255,255,255,0.95), rgba(255,248,239,0.9)); box-shadow: var(--shadow-soft); border: 1px solid rgba(255,255,255,0.6); }
        .page-hero::after { content: ""; position: absolute; inset: 0; background: radial-gradient(circle at 80% 10%, rgba(255,130,90,0.2), transparent 45%), radial-gradient(circle at 10% 0%, rgba(114,175,255,0.2), transparent 40%); pointer-events: none; mix-blend-mode: multiply; }
        .page-hero > * { position: relative; z-index: 1; }
        .page-hero h1 { font-size: clamp(2.2rem, 4.5vw, 3.2rem); margin-bottom: 0.5rem; }
        .page-hero p { max-width: 62ch; color: var(--muted); margin-bottom: 1rem; }
        .page-hero .hero-actions { display: flex; flex-wrap: wrap; gap: 0.85rem; align-items: center; }
        .hero-featured { margin-top: 1.25rem; padding: 1.1rem 1.35rem; border-radius: 20px; border: 1px solid rgba(0,0,0,0.06); background: rgba(255,255,255,0.92); box-shadow: 0 12px 28px rgba(0,0,0,0.08); }
        .hero-featured small { display: inline-block; text-transform: uppercase; letter-spacing: 0.28em; font-size: 0.65rem; color: var(--muted); margin-bottom: 0.35rem; }
        .hero-featured a { display: block; font-weight: 600; text-decoration: none; font-size: 1.1rem; color: var(--text); margin-bottom: 0.3rem; }
        .hero-featured p { margin: 0; color: var(--muted); font-size: 0.92rem; }
        .hero-featured-meta { display: flex; gap: 1.1rem; font-size: 0.85rem; margin-top: 0.45rem; color: var(--muted); flex-wrap: wrap; }

        .recipes-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: clamp(1rem, 3vw, 1.9rem); margin: 0; padding: 0; list-style: none; }

        .recipe-card {
            position: relative;
            background: var(--card-bg);
            border-radius: 24px;
            padding: 1.35rem;
            box-shadow: var(--shadow-soft);
            border: 1px solid rgba(255,255,255,0.6);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            overflow: hidden;
        }
        .recipe-card::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 80% 0%, rgba(255,130,90,0.12), transparent 45%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .recipe-card:hover { transform: translateY(-6px); box-shadow: 0 28px 40px rgba(30,24,18,0.18); }
        .recipe-card:hover::after { opacity: 1; }
        .recipe-card > a { display: block; color: inherit; text-decoration: none; position: relative; z-index: 1; }
        .recipe-card img { width: 100%; border-radius: 16px; margin-bottom: 0.95rem; aspect-ratio: 4 / 3; object-fit: cover; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.8); }
        .recipe-card h3 { margin: 0.15rem 0 0.45rem; font-size: 1.2rem; }
        .recipe-card p { margin: 0; color: var(--muted); font-size: 0.95rem; }
        .recipe-card__meta { display: flex; flex-wrap: wrap; gap: 0.4rem 0.8rem; font-size: 0.85rem; margin-top: 0.65rem; color: var(--muted); }
        .recipe-card__tags { display: flex; flex-wrap: wrap; gap: 0.35rem; margin-top: 0.8rem; }
        .recipe-card__badges { display: flex; gap: 0.35rem; flex-wrap: wrap; margin-top: 0.8rem; }
        .pill-badge { display: inline-flex; align-items: center; padding: 0.18rem 0.85rem; border-radius: 999px; background: rgba(255,130,90,0.12); color: var(--accent-dark); font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.12em; }
        .favorite-toggle, .favorite-filter-btn { border: 1px solid rgba(0,0,0,0.12); border-radius: 999px; padding: 0.45rem 1rem; font-size: 0.85rem; background: #fff; color: var(--text); cursor: pointer; transition: background 0.2s, color 0.2s, border-color 0.2s; }
        .favorite-toggle.is-active, .favorite-filter-btn.is-active { background: linear-gradient(120deg, var(--accent), var(--accent-dark)); color: #fff; border-color: transparent; }
        .favorite-toggle { position: absolute; top: 1.25rem; right: 1.25rem; z-index: 2; background: rgba(255,255,255,0.9); }

        .filter-controls { display: flex; flex-wrap: wrap; gap: 0.75rem; margin: 1.25rem 0 2rem; }
        .filter-controls a { border: 1px solid rgba(0,0,0,0.12); border-radius: 999px; padding: 0.45rem 1.1rem; font-size: 0.9rem; text-decoration: none; color: var(--muted); transition: background 0.2s, color 0.2s, border-color 0.2s, transform 0.2s; letter-spacing: 0.02em; }
        .filter-controls a:hover { transform: translateY(-1px); }
        .filter-controls a.is-active { background: linear-gradient(120deg, var(--accent), var(--accent-dark)); color: #fff; border-color: transparent; box-shadow: 0 8px 20px rgba(234,90,47,0.35); }

        .recipe-search { display: flex; flex-wrap: wrap; gap: 0.75rem; margin: 1.5rem 0 1rem; }
        .recipe-search input[type="search"] { flex: 1 1 220px; border-radius: 999px; border: 1px solid rgba(0,0,0,0.12); padding: 0.65rem 1.15rem; font-size: 0.95rem; background: #fff; }
        .recipe-search button { border: none; border-radius: 999px; background: linear-gradient(120deg, var(--accent), var(--accent-dark)); color: #fff; padding: 0.65rem 1.5rem; font-weight: 600; cursor: pointer; box-shadow: 0 10px 24px rgba(234,90,47,0.35); }

        .recipe-stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 1rem; margin-bottom: 2.5rem; }
        .recipe-stat-card { background: rgba(255,255,255,0.9); border-radius: 18px; padding: 1.25rem; border: 1px solid rgba(0,0,0,0.04); box-shadow: 0 14px 30px rgba(43,39,32,0.08); }
        .recipe-stat-card span { text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; color: var(--muted); display: block; margin-bottom: 0.35rem; }
        .recipe-stat-card strong { font-size: 1.45rem; }

        .tag-chip { display: inline-flex; align-items: center; padding: 0.2rem 0.75rem; border-radius: 999px; background: rgba(0,0,0,0.05); font-size: 0.8rem; color: var(--muted); text-transform: capitalize; }
        .tags-cloud { display: flex; flex-wrap: wrap; gap: 0.6rem; }
        .tags-cloud a { text-decoration: none; padding: 0.4rem 0.9rem; border-radius: 999px; border: 1px solid rgba(0,0,0,0.08); color: var(--muted); font-size: 0.85rem; }
        .difficulty-showcase { margin: 3rem 0; }
        .difficulty-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 1rem; }
        .difficulty-card { border-radius: 18px; padding: 1.25rem; border: 1px solid rgba(0,0,0,0.06); background: rgba(255,255,255,0.9); box-shadow: 0 12px 22px rgba(0,0,0,0.08); text-decoration: none; color: inherit; display: block; }
        .difficulty-card strong { font-size: 1.35rem; display: block; }
        .difficulty-card span { color: var(--muted); font-size: 0.85rem; }

        .cta-banner { margin: 3rem 0; padding: clamp(1.5rem, 4vw, 2.5rem); border-radius: 28px; background: linear-gradient(120deg, #313865, #1b1f3b); color: #fff; display: flex; flex-wrap: wrap; gap: 1.5rem; align-items: center; }
        .cta-banner h3 { margin: 0; }
        .cta-banner p { margin: 0; color: rgba(255,255,255,0.85); max-width: 50ch; }
        .cta-banner form { display: flex; gap: 0.75rem; flex-wrap: wrap; }
        .cta-banner input { border-radius: 999px; border: none; padding: 0.65rem 1.1rem; flex: 1 1 220px; }
        .cta-banner button { border: none; border-radius: 999px; padding: 0.65rem 1.5rem; background: #fff; color: #1b1f3b; font-weight: 600; cursor: pointer; }

        .seasonal-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.5rem; margin-top: 1.5rem; }
        .seasonal-card { border-radius: 20px; padding: 1rem; border: 1px solid rgba(0,0,0,0.06); background: rgba(255,255,255,0.9); box-shadow: 0 12px 24px rgba(0,0,0,0.08); }
        .seasonal-card img { width: 100%; border-radius: 14px; margin-bottom: 0.8rem; aspect-ratio: 4 / 3; object-fit: cover; }
        .seasonal-card span { font-size: 0.8rem; color: var(--muted); }

        .active-filters { display: flex; flex-wrap: wrap; gap: 0.5rem; margin: 0.75rem 0 2rem; align-items: center; }
        .filter-badge { display: inline-flex; align-items: center; gap: 0.35rem; padding: 0.4rem 0.9rem; border-radius: 999px; background: rgba(0,0,0,0.05); font-size: 0.85rem; }
        .filter-badge button { background: none; border: none; cursor: pointer; font-weight: 600; color: var(--text); }
        .clear-link { text-decoration: none; color: var(--accent-dark); font-weight: 600; }

        .sort-controls { display: flex; gap: 0.75rem; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; }
        .sort-controls select { border-radius: 999px; border: 1px solid rgba(0,0,0,0.12); padding: 0.5rem 1rem; font-size: 0.9rem; }
        .favorites-cta { display: flex; gap: 0.75rem; align-items: center; margin: 0.5rem 0 1.5rem; flex-wrap: wrap; }
        .muted { color: var(--muted); font-size: 0.85rem; }

        .recipe-single { background: var(--card-bg); border-radius: 32px; padding: clamp(1.75rem, 4vw, 3.2rem); box-shadow: var(--shadow-soft); margin-bottom: 3rem; border: 1px solid rgba(255,255,255,0.7); }
        .recipe-header { border-bottom: 1px solid rgba(0,0,0,0.05); padding-bottom: 1.5rem; margin-bottom: 1.5rem; }
        .recipe-header .eyebrow { text-transform: uppercase; letter-spacing: 0.25em; font-size: 0.75rem; color: var(--muted); margin: 0 0 0.35rem; }
        .recipe-header .lede { font-size: 1.05rem; color: var(--muted); max-width: 60ch; }
        .recipe-hero { margin: 2rem 0; border-radius: 22px; overflow: hidden; box-shadow: 0 20px 38px rgba(0,0,0,0.12); }
        .recipe-hero img { width: 100%; display: block; object-fit: cover; }

        .recipe-meta { display: flex; flex-wrap: wrap; gap: 1rem 2rem; padding: 1.25rem 1.5rem; border: 1px solid rgba(0,0,0,0.08); border-radius: 18px; background: rgba(250,247,242,0.8); margin-bottom: 2.5rem; }
        .recipe-meta div { flex: 1 1 160px; }
        .recipe-meta span { display: block; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.2em; color: var(--muted); margin-bottom: 0.25rem; }
        .recipe-meta strong { font-size: 1.25rem; color: var(--text); }

        .recipe-panel { margin-bottom: 2.5rem; }
        .recipe-panel h2 { font-size: 1.35rem; margin-bottom: 0.75rem; }
        .panel-body { border-radius: 16px; border: 1px solid rgba(0,0,0,0.08); padding: 1.25rem 1.5rem; background: rgba(255,255,255,0.9); box-shadow: inset 0 1px 0 rgba(255,255,255,0.6); font-family: "Inter", system-ui, sans-serif; line-height: 1.7; }

        .recipe-share { display: flex; flex-wrap: wrap; gap: 0.75rem; margin-top: 2rem; }
        .recipe-share a { text-decoration: none; border-radius: 999px; padding: 0.45rem 1rem; border: 1px solid rgba(0,0,0,0.12); font-size: 0.85rem; color: var(--text); }

        .video-embed { position: relative; padding-top: 56.25%; border-radius: 18px; overflow: hidden; box-shadow: 0 24px 42px rgba(0,0,0,0.15); }
        .video-embed iframe { position: absolute; inset: 0; width: 100%; height: 100%; border: 0; }
        .notes-panel { border-radius: 18px; border: 1px solid rgba(0,0,0,0.08); padding: 1.5rem; background: rgba(255,255,255,0.92); }
        .entry-actions { display: flex; gap: 0.75rem; flex-wrap: wrap; align-items: center; margin: 1rem 0 2rem; }
        .author-spotlight, .auth-cta { margin: 3rem 0; padding: clamp(1.5rem, 4vw, 2.5rem); border-radius: 28px; border: 1px solid rgba(0,0,0,0.05); background: rgba(255,255,255,0.9); box-shadow: 0 18px 32px rgba(0,0,0,0.08); display: grid; gap: 1.5rem; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); align-items: center; }
        .author-spotlight img { width: 120px; height: 120px; border-radius: 50%; object-fit: cover; box-shadow: 0 12px 24px rgba(0,0,0,0.15); }
        .author-spotlight .author-meta { display: flex; flex-direction: column; gap: 0.35rem; }
        .submission-guide { margin: 2rem 0; border-radius: 24px; border: 1px dashed rgba(0,0,0,0.1); padding: clamp(1rem, 3vw, 1.75rem); background: rgba(255,255,255,0.9); }
        .submission-guide__steps { display: grid; gap: 1rem; grid-template-columns: repeat(auto-fit, minmax(160px, 1fr)); margin-top: 1rem; }
        .submission-guide__step { border-radius: 18px; padding: 0.85rem 1rem; background: rgba(0,0,0,0.03); }
        .quick-links { display: flex; flex-wrap: wrap; gap: 0.65rem; margin: 1.2rem 0 0; }
        .quick-links a { border: 1px solid rgba(0,0,0,0.08); border-radius: 999px; padding: 0.4rem 1rem; text-decoration: none; font-size: 0.85rem; font-weight: 600; color: var(--muted); transition: background 0.2s, color 0.2s, border-color 0.2s; }
        .quick-links a:hover { background: rgba(255,130,90,0.08); border-color: rgba(255,130,90,0.2); color: var(--text); }

        .insights-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1.1rem; margin-top: 1.5rem; }
        .insight-card { border-radius: 22px; border: 1px solid rgba(0,0,0,0.06); padding: 1.1rem 1.2rem; background: rgba(255,255,255,0.9); box-shadow: 0 18px 32px rgba(0,0,0,0.08); }
        .insight-card h3 { margin: 0 0 0.4rem; font-size: 1.05rem; }
        .insight-card p { margin: 0; color: var(--muted); font-size: 0.9rem; }
        .badge { display: inline-flex; align-items: center; border-radius: 999px; padding: 0.2rem 0.75rem; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.08em; background: rgba(0,0,0,0.04); color: var(--muted); }
        .progress-track { width: 100%; height: 6px; border-radius: 999px; background: rgba(0,0,0,0.08); margin-top: 0.6rem; position: relative; overflow: hidden; }
        .progress-fill { position: absolute; inset: 0; border-radius: inherit; background: linear-gradient(120deg, var(--accent), var(--accent-dark)); transform-origin: left; transition: transform 0.3s ease; }
        .progress-meta { display: flex; justify-content: space-between; font-size: 0.82rem; margin-top: 0.4rem; color: var(--muted); }

        .resource-cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1.1rem; margin-top: 1.25rem; }
        .resource-card { border-radius: 20px; border: 1px solid rgba(0,0,0,0.06); padding: 1rem 1.1rem; background: rgba(255,255,255,0.92); box-shadow: 0 16px 28px rgba(0,0,0,0.07); }
        .resource-card ul { margin: 0.6rem 0 0; padding-left: 1.1rem; color: var(--muted); }
        .resource-card li { margin-bottom: 0.35rem; }

        .plan-board { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1.2rem; margin-top: 1.3rem; }
        .plan-card { border-radius: 22px; border: 1px solid var(--border); padding: 1rem 1.1rem; background: rgba(255,255,255,0.94); box-shadow: 0 16px 30px rgba(0,0,0,0.08); position: relative; overflow: hidden; }
        .plan-card::after { content: ""; position: absolute; inset: 0; background: radial-gradient(circle at 80% -10%, rgba(255,130,90,0.14), transparent 45%); opacity: 0; transition: opacity 0.3s; }
        .plan-card:hover::after { opacity: 1; }
        .plan-card h3 { margin: 0; font-size: 1rem; }
        .plan-card p { margin: 0.3rem 0 0.5rem; color: var(--muted); font-size: 0.9rem; }
        .plan-card a { text-decoration: none; color: inherit; font-weight: 600; }
        .plan-card small { display: block; text-transform: uppercase; letter-spacing: 0.25em; font-size: 0.65rem; color: var(--muted); margin-bottom: 0.3rem; }

        .timeline { list-style: none; padding: 0; margin: 1.5rem 0 0; display: grid; gap: 1rem; }
        .timeline__item { display: grid; grid-template-columns: auto 1fr auto; gap: 0.85rem; align-items: center; background: rgba(255,255,255,0.94); border-radius: 18px; padding: 0.8rem 1rem; border: 1px solid rgba(0,0,0,0.05); box-shadow: 0 12px 20px rgba(0,0,0,0.05); }
        .timeline__date { font-weight: 600; font-size: 0.85rem; color: var(--muted); text-transform: uppercase; }
        .timeline__content h4 { margin: 0; font-size: 1rem; }
        .timeline__content p { margin: 0.15rem 0 0; color: var(--muted); font-size: 0.9rem; }

        .pagination { display: flex; gap: 0.5rem; justify-content: center; margin-top: 1.5rem; }
        .pagination a,
        .pagination span { padding: 0.4rem 0.9rem; border-radius: 999px; border: 1px solid rgba(0,0,0,0.12); text-decoration: none; font-size: 0.9rem; color: var(--text); }
        .pagination a:hover { background: rgba(0,0,0,0.05); }
        .pagination .is-active { background: linear-gradient(120deg, var(--accent), var(--accent-dark)); color: #fff; border-color: transparent; }

        .difficulty-pill { display: inline-flex; align-items: center; justify-content: center; padding: 0.15rem 0.9rem; border-radius: 999px; font-size: 0.95rem; color: #fff; text-transform: capitalize; }
        .difficulty-easy { background: linear-gradient(120deg, #52e08b, #2fbe6c); }
        .difficulty-medium { background: linear-gradient(120deg, #ffca5f, #f99f2c); }
        .difficulty-hard { background: linear-gradient(120deg, #ff7196, #f5315f); }

        ul, ol { padding-left: 1.25rem; }

        @media (max-width: 720px) {
            header > div { flex-direction: column; align-items: flex-start; gap: 0.8rem; }
        }
        @media (max-width: 640px) {
            .recipe-card { padding: 1.15rem; }
            .page-hero { padding: 1.4rem; }
            .recipe-meta { padding: 1rem; }
            .recipe-panel { margin-bottom: 1.75rem; }
            .cta-banner { padding: 1.5rem; }
            .favorite-toggle { position: static; margin-bottom: 0.65rem; }
        }
    </style>
</head>

<body>

<header>
    <div>
        <nav>
            <a href="{{ siteUrl }}">Home</a>
            <a href="{{ url('recipes') }}">All Recipes</a>
            <a href="{{ url('recipes') }}#favorites">Favorites</a>
            <a href="{{ url('submit') }}">Submit a Recipe</a>
        </nav>
        <div class="account-links">
            {% set currentUser = craft.app.user.identity %}
            {% if currentUser %}
                <span>Hello, {{ currentUser.friendlyName ?: currentUser.username }}</span>
                <a class="btn btn-secondary" href="{{ url('account') }}">My account</a>
                <form method="post">
                    {{ csrfInput() }}
                    {{ actionInput('users/logout') }}
                    <button type="submit" class="btn btn-ghost">Log out</button>
                </form>
            {% else %}
                <a class="btn btn-secondary" href="{{ url('login') }}">Log in</a>
                <a class="btn btn-primary" href="{{ url('register') }}">Create account</a>
            {% endif %}
        </div>
    </div>
</header>

<main>
    {% block content %}{% endblock %}
</main>

<script>
(function() {
    const storageKey = 'favoriteRecipes';

    const loadFavorites = () => {
        try {
            const raw = localStorage.getItem(storageKey);
            if (!raw) {
                return new Set();
            }
            const parsed = JSON.parse(raw);
            return new Set(Array.isArray(parsed) ? parsed : []);
        } catch (e) {
            return new Set();
        }
    };

    let favorites = loadFavorites();

    const persist = () => {
        try {
            localStorage.setItem(storageKey, JSON.stringify(Array.from(favorites)));
        } catch (e) {
            // noop
        }
    };

    const updateFavoriteButtons = () => {
        document.querySelectorAll('[data-favorite-button]').forEach((btn) => {
            const slug = btn.dataset.recipeSlug;
            if (!slug) {
                return;
            }
            const isActive = favorites.has(slug);
            btn.classList.toggle('is-active', isActive);
            btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
            btn.textContent = isActive ? 'Saved to favorites' : 'Add to favorites';
        });
    };

    const updateFavoriteCards = () => {
        document.querySelectorAll('[data-recipe-card]').forEach((card) => {
            const slug = card.dataset.recipeSlug;
            if (!slug) {
                return;
            }
            card.dataset.isFavorite = favorites.has(slug) ? '1' : '0';
        });
    };

    const dispatchChange = () => {
        updateFavoriteButtons();
        updateFavoriteCards();
        applyFavoritesFilter();
    };

    document.addEventListener('click', (event) => {
        const btn = event.target.closest('[data-favorite-button]');
        if (!btn) {
            return;
        }
        event.preventDefault();
        const slug = btn.dataset.recipeSlug;
        if (!slug) {
            return;
        }
        if (favorites.has(slug)) {
            favorites.delete(slug);
        } else {
            favorites.add(slug);
        }
        persist();
        dispatchChange();
    });

    const favoritesToggle = document.getElementById('favoritesOnlyToggle');
    const favoritesEmpty = document.getElementById('favoritesEmpty');
    let favoritesFilterActive = false;

    const applyFavoritesFilter = () => {
        if (!favoritesToggle) {
            return;
        }
        const cards = document.querySelectorAll('[data-recipe-card]');
        let visible = 0;
        cards.forEach((card) => {
            const shouldShow = !favoritesFilterActive || card.dataset.isFavorite === '1';
            card.style.display = shouldShow ? '' : 'none';
            if (shouldShow) {
                visible += 1;
            }
        });
        if (favoritesEmpty) {
            favoritesEmpty.hidden = !(favoritesFilterActive && visible === 0);
        }
    };

    if (favoritesToggle) {
        favoritesToggle.addEventListener('click', () => {
            favoritesFilterActive = !favoritesFilterActive;
            favoritesToggle.classList.toggle('is-active', favoritesFilterActive);
            favoritesToggle.textContent = favoritesFilterActive ? 'Showing favorites' : 'Show favorites only';
            applyFavoritesFilter();
        });
    }

    dispatchChange();
})();
</script>
</body>
</html>
